!!!
%html{lang: 'en'}
  %head
    %meta{content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}/
    %title
      = t('main.title')
    = csrf_meta_tags
    = csp_meta_tag

    %meta{charset: 'utf-8'}/
    %meta{content: 'width=device-width, initial-scale=1', name: 'viewport'}/
    %meta{content: '', name: 'description'}/
    
    = stylesheet_link_tag 'application', 'data-turbo-track': 'reload'
    = javascript_include_tag 'application', 'data-turbo-track': 'reload', defer: true
    
    %link{href: '/apple-touch-icon.png', rel: 'apple-touch-icon', sizes: '180x180'}/
    %link{href: '/favicon-32x32.png', rel: 'icon', sizes: '32x32', type: 'image/png'}/
    %link{href: '/favicon-16x16.png', rel: 'icon', sizes: '16x16', type: 'image/png'}/
    %link{href: '/site.webmanifest', rel: 'manifest'}/
    %link{color: '#61b9d2', href: '/safari-pinned-tab.svg', rel: 'mask-icon'}/
    %meta{content: '#da532c', name: 'msapplication-TileColor'}/
    %meta{content: '#ffffff', name: 'theme-color'}/
  
  %body.flex.flex-col.h-screen.justify-between
    .bg-gray-700
      .max-w-screen-lg.mx-auto.py-3.px-3.sm:px-6.lg:px-8
        .flex.items-center.justify-between.flex-wrap
          .flex-1.flex.items-center
            %span.flex.p-2.rounded-lg.bg-gray-900
              %svg.w-6.h-6.text-white{fill: 'none', stroke: 'currentColor', viewbox: '0 0 24 24', xmlns: 'http://www.w3.org/2000/svg'}
                %path{d: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z', 'stroke-linecap' => 'round', 'stroke-linejoin' => 'round', 'stroke-width' => '2'}
            %p.ml-3.font-medium.text-white.truncate
              Rails #{Rails::VERSION::STRING} and Ruby #{ENV['RUBY_VERSION']}
          .mt-2.order-3.w-full.sm:mt-0.sm:w-auto
            .rounded-md.shadow-sm
              %span.flex.items-center.justify-center.px-4.py-2.border.border-transparent.text-sm.leading-5.font-medium.rounded-md.text-white.bg-gray-500
                RAILS_ENV = #{Rails.env}
    %main.max-w-screen-lg.mx-auto.mb-auto
      = yield
    %footer.text-center.mt-6.pb-6.h-10
      %p.text-gray-500
        %a.border-b.mb-1{href: 'https://github.com/nickjj/docker-rails-example'} Coded
        with
        %svg.h-5.w-5.text-red-600.inline{fill: 'none', stroke: 'currentColor', viewbox: '0 0 24 24', xmlns: 'http://www.w3.org/2000/svg'}
          %path{:d => 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z', 'stroke-linecap' => 'round', 'stroke-linejoin' => 'round', 'stroke-width' => '2'}
        by
        %a.border-b.mb-1{:href => 'https://nickjanetakis.com'} Nick Janetakis

